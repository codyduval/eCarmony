/*----------------------------------------------------------------------------- 
=02 HEADER, NAV, MAIN LOGO
-----------------------------------------------------------------------------*/

#header {
	height  :100px;
	position:relative;
	top     :10px;
}

#socialMedia {
	margin-bottom:0;
	float: right;
}

	#socialMedia ul {
		list-style:none;
	}

	#socialMedia li {
		overflow   :hidden;
		text-indent:-9999px;
		display    :block;
		float      :right;
		margin     :2px 2px 2px 2px;
	}

			#socialMedia li a {
				background:url(<%= asset_path 'socialNav.png'%>) no-repeat;
				display   :block;
				height    :50px;
				width     :48px;
			}
		
				#socialMedia li.linkedIn a {
						background-position: -9px -7px;
				}

				#socialMedia li.linkedIn a:hover {
						background-position: -9px -67px;
				}

				#socialMedia li.twitter a {
						background-position: -67px -7px;
				}

				#socialMedia li.twitter a:hover {
						background-position: -67px -67px;
				}

				#socialMedia li.facebook a {
						background-position: -126px -7px;
				}

				#socialMedia li.facebook a:hover {
						background-position: -126px -67px;
				}

				#socialMedia li.rss a {
						background-position: -184px -7px;
				}

				#socialMedia li.rss a:hover {
						background-position: -184px -67px;
				}

#logo {
	height       :75px;
	margin-left  :25px;
	margin-bottom:0px;
}

	#nav ul {
